<h1><%= gettext "Listing Products"%></h1>

<%= form_for @conn, Routes.products_path(@conn, :show_minimum_prijs), fn f -> %>
  <div class="form-group">
    <%= label f, gettext "Minimum prijs" %>
    <%= text_input f, :prijs %>
  </div>

  <div class="form-group">
    <%= submit gettext("Submit"), class: "btn btn-primary" %>
  </div>
<% end %>

