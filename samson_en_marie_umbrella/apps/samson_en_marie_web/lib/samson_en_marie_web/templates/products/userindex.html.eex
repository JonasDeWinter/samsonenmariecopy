  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th><%= gettext "Title"%></th>
      <th><%= gettext "Description"%></th>
      <th><%= gettext "Size"%></th>
      <th><%= gettext "Color"%></th>
      <th><%= gettext "Price"%></th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for products <- @products do %>
    <tr>
      <td><%= products.title %></td>
      <td><%= products.description %></td>
      <td><%= products.size %></td>
      <td><%= products.color %></td>
      <td><%= products.price %></td>

      <td>
        <span><%= link gettext("Show"), to: Routes.products_path(@conn, :show_user, products) %></span>
        <span><%= link gettext("add"), to: Routes.winkelkar_path(@conn, :add_to_cart, id: products.id) %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
